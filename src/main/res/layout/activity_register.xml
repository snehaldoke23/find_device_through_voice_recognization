<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#84f1e7a9"
    tools:context="com.example.unity2.devicefinder.RegisterActivity">
    <ImageView
        android:id="@+id/textView2"
        android:layout_width="120sp"
        android:layout_height="70sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/newjustsearch" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/textView2">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <EditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_alignParentTop="true"
                android:ems="10"
                android:fontFamily="sans-serif"
                android:hint="USERNAME"
                android:inputType="textEmailAddress"
                android:textColor="#000"
                android:textColorHint="#000"
                android:textStyle="normal|italic" />



            <!--<TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/button"
                android:layout_marginTop="37dp"
                android:clickable="true"
                android:text="forgot password ?"
                android:textSize="14sp"
                android:textStyle="normal|italic" />-->

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_below="@+id/et_email"
                android:ems="10"
                android:hint="PASSWORD"
                android:inputType="textPassword"
                android:textColor="#000"
                android:textColorHint="#000"
                android:textStyle="normal|italic" />
            <EditText

                android:id="@+id/et_confpass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_below="@+id/et_email"
                android:ems="10"
                android:hint="CONF PASSWORD"
                android:inputType="textPassword"
                android:textColor="#000"
                android:textColorHint="#000"
                android:textStyle="normal|italic" />
            <EditText
                android:id="@+id/et_email"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_alignParentTop="true"
                android:ems="10"
                android:fontFamily="sans-serif"
                android:hint="E-MAIL"
                android:inputType="textEmailAddress"
                android:textColor="#000"
                android:textColorHint="#000"
                android:textStyle="normal|italic" />
            <EditText
                android:id="@+id/et_mobno"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_alignParentTop="true"
                android:ems="10"
                android:fontFamily="sans-serif"
                android:hint="MOBILE NO"
                android:inputType="textEmailAddress"
                android:textColor="#000"
                android:textColorHint="#000"
                android:textStyle="normal|italic" />
            <EditText
                android:id="@+id/et_location"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_alignParentTop="true"
                android:ems="10"
                android:fontFamily="sans-serif"
                android:hint="LOCATION"
                android:inputType="textEmailAddress"
                android:textColor="#000"
                android:textColorHint="#000"
                android:textStyle="normal|italic" />

            <EditText
                android:id="@+id/et_state"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_alignParentTop="true"
                android:ems="10"
                android:fontFamily="sans-serif"
                android:hint="STATE"
                android:inputType="textEmailAddress"
                android:textColor="#000"
                android:textColorHint="#000"
                android:textStyle="normal|italic" />

            <Button
                android:id="@+id/Register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_below="@+id/et_password"
                android:layout_marginTop="19dp"
                android:background="@color/blue"
                android:text="REGISTER"
                android:textColor="#fff"
                android:textSize="20dp" />


        </LinearLayout>
    </ScrollView>



</RelativeLayout>